# OneSoko Production Environment Configuration
# Copy this file to .env and update the values for your deployment

# ======================
# Django Configuration
# ======================
DJANGO_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:8080,https://yourdomain.com,https://www.yourdomain.com

# ======================
# Database Configuration (MySQL)
# ======================
DATABASE_URL=mysql://onesoko_user:onesoko_password@localhost:3306/onesoko_db
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_PASSWORD=onesoko_password

# ======================
# Redis Cache Configuration
# ======================
REDIS_URL=redis://localhost:6379/1

# ======================
# Email Configuration (SMTP)
# ======================
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ======================
# Security Configuration
# ======================
# Set to true if using HTTPS
SECURE_SSL_REDIRECT=false
# Uncomment if behind a reverse proxy with SSL termination
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# ======================
# File Storage Configuration
# ======================
STATIC_URL=/static/
MEDIA_URL=/media/

# ======================
# Celery Configuration (Background Tasks)
# ======================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO

# ======================
# Optional: Third-party Services
# ======================
# AWS S3 for file storage (uncomment if needed)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Social Authentication (uncomment if needed)
# GOOGLE_OAUTH2_KEY=your-google-client-id
# GOOGLE_OAUTH2_SECRET=your-google-client-secret
# FACEBOOK_KEY=your-facebook-app-id
# FACEBOOK_SECRET=your-facebook-app-secret

# Payment Gateway (uncomment if needed)
# STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# Monitoring (uncomment if needed)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
