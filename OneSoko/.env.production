# Production Environment Variables for Docker Deployment
DEBUG=False
DJANGO_SETTINGS_MODULE=MyOneSoko.settings

# Database Configuration (will be set by deployment platform)
# DB_HOST=db
# DB_NAME=onesoko_prod
# DB_USER=onesoko_user
# DB_PASSWORD=your_secure_password
# DB_PORT=3306

# Security
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production
ALLOWED_HOSTS=*

# Email Configuration (optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app
CORS_ALLOW_ALL_ORIGINS=False

# Railway/Render specific
# DATABASE_URL=mysql://user:password@host:port/database
# REDIS_URL=redis://host:port
