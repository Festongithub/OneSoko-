# OneSoko Production Environment Variables
# Copy this file to .env and update with your actual values

# Django Settings
DJANGO_SETTINGS_MODULE=MyOneSoko.settings_production
SECRET_KEY=django-insecure-dev-key-for-local-testing-only-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# Database Configuration
DATABASE_URL=mysql://onesoko_user:secure_password_123@db:3306/onesoko
MYSQL_DATABASE=onesoko
MYSQL_USER=onesoko_user
MYSQL_PASSWORD=secure_password_123
MYSQL_ROOT_PASSWORD=super_secure_root_password_456

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/4
CELERY_RESULT_BACKEND=redis://redis:6379/5

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@onesoko.com

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=onesoko-media
AWS_S3_REGION_NAME=us-east-1

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
